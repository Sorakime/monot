{
  "name": "flatbrowser",
  "homepage": "https://flatponch.github.io/",
  "version": "1.0.0",
  "description": "The new web browser \"FlatBrowser\" by FlatPonch  ",
  "main": "src/main/main.js",
  "repository": "https://github.com/FlatPonch/FlatBrowser/",
  "scripts": {
    "test": "npx electron .",
    "build": "npx electron-builder",
    "format": "npx eslint --fix ."
  },
  "author": "FlatPonch",
  "license": "ISC",
  "devDependencies": {
    "electron": "^17.1.0",
    "electron-builder": "^23.0.3",
    "eslint": "^8.5.0",
    "eslint-plugin-node": "^11.1.0"
  },
  "engines": {
    "node": ">=15.0.0"
  },
  "build": {
    "appId": "io.flatpnc.flatbrowser",
    "productName": "FlatBrowser",
    "copyright": "Copyright Â© 2022 FlatPonch",
    "files": [
      "!.git",
      "!.dist",
      "src",
      "package-lock.json",
      "package.json",
      "!.DS_Store"
    ],
    "win": {
      "icon": "src/image/logo.ico",
      "target": "nsis",
      "legalTrademarks": "Copyright 2021 monochrome."
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/image/logo.ico"
    },
    "linux": {
      "icon": "src/image/icon.png",
      "target": "AppImage"
    },
    "appImage": {
      "category": "Utility",
      "synopsis": "FlatBrowser v1.0.0 Build7"
    },
    "mac": {
      "identity": null,
      "icon": "src/image/logo.icns",
      "category": "public.app-category.reference",
      "target": "dmg"
    },
    "dmg": {
      "backgroundColor": "#efefef",
      "title": "FlatBrowser v1.0.0 Build7"
    }
  }
}
